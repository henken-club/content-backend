datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id String @id @default(cuid())

  title String

  writings Writing[]
}

model BookSeries {
  id String @id @default(cuid())

  title String
}

model Author {
  id String @id @default(cuid())

  name String

  writings Writing[]
}

model Writing {
  id String @id @default(cuid())

  author   Author @relation(fields: [authorId], references: [id])
  authorId String

  book   Book   @relation(fields: [bookId], references: [id])
  bookId String

  @@unique([authorId, bookId])
}
